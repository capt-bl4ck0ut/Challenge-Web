{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "useDefineForClassFields": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"]
}
